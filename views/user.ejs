<script>
    // Auto-fill WhatsApp number
    document.getElementById("sameAsPhone")?.addEventListener("change", function () {
      document.getElementById("whatsappNumber").value = this.checked ? document.getElementById("phoneNumber").value : "";
    });

    // Fetch saloons via AJAX
    function loadSaloons() {
      fetch('/user/get')
        .then(res => res.json())
        .then(data => {
          const tbody = document.getElementById('saloonTableBody');
          tbody.innerHTML = '';
          console.log(data.results);
          
          if (data.results.length > 0) {
            data.results.forEach((saloon, index) => {
              tbody.innerHTML += `
                <tr>
                  <td>${index + 1}</td>
                  <td>${saloon.name}</td>
                  <td>${saloon.email}</td>
                  <td>${saloon.password}</td>
                  <td>${saloon.mobile}</td>
                  <td>${saloon.role}</td>
                  <td>${new Date(saloon.created_at).toLocaleDateString()} </td>

                </tr>
              `;
            });
          } else {
            tbody.innerHTML = '<tr><td colspan="6" class="text-center">No salons found</td></tr>';
          }
        })
        .catch(err => console.error('Error fetching saloons:', err));
    }

    // Initial load
    loadSaloons();

    
  </script>


