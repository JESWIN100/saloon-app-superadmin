<script>
  const tableBody = document.getElementById('booking-tbody');
  const filterDateInput = document.getElementById('filter-date');

  async function fetchBookings(date = '') {
    try {
      let url = '/booking/bookings';
      if (date) {
        url += `?date=${date}`;
      }

      const response = await fetch(url);
      const bookings = await response.json();
      console.log(bookings);

      tableBody.innerHTML = '';

      bookings.forEach(booking => {
        // If booking has multiple services, create multiple rows
        if (booking.services.length > 0) {
          booking.services.forEach(service => {
            const bookingDate = new Date(booking.booking_date);
            const row = document.createElement('tr');
            row.innerHTML = `
              <td>${booking.salon ? booking.salon.name : '-'}</td>
              <td>${booking.name}</td>
              <td>${bookingDate.toLocaleDateString()} ${bookingDate.toLocaleTimeString()}</td>
              <td>${service.name}</td>
              <td>${service.start_time || '-'}</td>
              <td>${service.end_time || '-'}</td>
              <td>${booking.payment_status}</td>
              <td>${booking.status}</td>
            `;
            tableBody.appendChild(row);
          });
        } else {
          // Booking has no services yet
          const bookingDate = new Date(booking.booking_date);
          const row = document.createElement('tr');
          row.innerHTML = `
            <td>${booking.salon ? booking.salon.name : '-'}</td>
            <td>${booking.name}</td>
            <td>${bookingDate.toLocaleDateString()} ${bookingDate.toLocaleTimeString()}</td>
            <td>-</td>
            <td>-</td>
            <td>-</td>
            <td>${booking.payment_status}</td>
            <td>${booking.status}</td>
          `;
          tableBody.appendChild(row);
        }
      });

    } catch (error) {
      console.error('Error fetching bookings:', error);
      tableBody.innerHTML = '<tr><td colspan="8">Failed to load data</td></tr>';
    }
  }

  // Initial load
  fetchBookings();

  // Filter bookings by date
  filterDateInput.addEventListener('change', () => {
    const selectedDate = filterDateInput.value;
    fetchBookings(selectedDate);
  });
</script>





